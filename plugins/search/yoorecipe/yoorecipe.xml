<?xml version="1.0" encoding="utf-8"?>
<extension version="2.5" type="plugin" group="search" method="upgrade">
	<name>plg_search_yoorecipe</name>
	<author>Yoorock</author>
	<creationDate>July 2013</creationDate>
	<copyright>(C) 2009 - 2013 YooRock SARL. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>support@yoorock.fr</authorEmail>
	<authorUrl>http://extensions.yoorock.fr</authorUrl>
	<version>1.0.0</version>
	<description>Includes YooRecipe items to Joomla native search.<br/>Please remind to ENABLE the plugin!!</description>
	<files>
		<filename plugin="yoorecipe">yoorecipe.php</filename>
		<filename>index.html</filename>
	</files>
	<languages>
		<language tag="en-GB">en-GB.plg_search_yoorecipe.ini</language>
		<language tag="en-GB">en-GB.plg_search_yoorecipe.sys.ini</language>
		<language tag="fr-FR">fr-FR.plg_search_yoorecipe.ini</language>
		<language tag="fr-FR">fr-FR.plg_search_yoorecipe.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="search_limit" type="text"
				default="50"
				description="JFIELD_PLG_SEARCH_SEARCHLIMIT_DESC"
				label="JFIELD_PLG_SEARCH_SEARCHLIMIT_LABEL"
				size="5"
				/>
				
				<field name="search_content" type="radio"
				default="0"
				description="JFIELD_PLG_SEARCH_ALL_DESC"
				label="JFIELD_PLG_SEARCH_ALL_LABEL"
				>
					<option value="0">JOFF</option>
					<option value="1">JON</option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
