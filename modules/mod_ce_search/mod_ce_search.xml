  <license>GNU General Public License version 2 or later; see LICENSE.txt	</license>
  <version>3.0.8</version>
  <description>MOD_CE_SEARCH_XML_DESCRIPTION</description>
  <files folder="site">
    <folder>language</folder>
    <folder>tmpl</folder>
    <filename>ajax.php</filename>
    <filename>helper.php</filename>
    <filename>index.html</filename>
    <filename module="mod_ce_search">mod_ce_search.php</filename>
  </files>
  <params/>
  <config>
    <fields name="params" addfieldpath="/administrator/components/com_contactenhanced/models/fields">
      
      
      
    <fieldset name="basic">
        
        
        
        
        
        
        
        
        
      <field name="set_itemid_title" type="title" label="MOD_CE_SEARCH_FIELD_SETITEMID_LABEL" description="MOD_CE_SEARCH_FIELD_SETITEMID_DESC">
        </field><field name="set_itemid" type="sql" key_field="value" value_field="text" query="SELECT id as value, CONCAT_WS(' - ', menutype,title) AS text        FROM #__menu        WHERE link LIKE '%option=com_contactenhanced&amp;view=search%'        AND published=1        ORDER BY menutype ASC, title ASC" label="MOD_CE_SEARCH_FIELD_SETITEMID_LABEL" description="MOD_CE_SEARCH_FIELD_SETITEMID_DESC">
          
        <option value="">JNONE</option></field><field name="label" type="label" label="MOD_CE_SEARCH_FIELD_LABEL_TEXT_LABEL" description="MOD_CE_SEARCH_FIELD_LABEL_TEXT_DESC">
				</field><field name="width" type="text" default="20" label="MOD_CE_SEARCH_FIELD_BOXWIDTH_LABEL" description="MOD_CE_SEARCH_FIELD_BOXWIDTH_DESC">
				</field><field name="text" type="text" label="MOD_CE_SEARCH_FIELD_TEXT_LABEL" description="MOD_CE_SEARCH_FIELD_TEXT_DESC">
				</field><field name="button_pos" type="list" default="bottom" label="MOD_CE_SEARCH_FIELD_BUTTONPOS_LABEL" description="MOD_CE_SEARCH_FIELD_BUTTONPOS_DESC">
          
          
          
          
          
        <option value="right">MOD_CE_SEARCH_FIELD_VALUE_RIGHT</option><option value="left">MOD_CE_SEARCH_FIELD_VALUE_LEFT</option><option value="top">MOD_CE_SEARCH_FIELD_VALUE_TOP</option><option value="bottom">MOD_CE_SEARCH_FIELD_VALUE_BOTTOM</option><option value="0">JHIDE</option></field><field name="imagebutton" type="radio" label="MOD_CE_SEARCH_FIELD_IMAGEBUTTON_LABEL" description="MOD_CE_SEARCH_FIELD_IMAGEBUTTON_DESC">
          
          
        <option value="">JNO</option><option value="1">JYES</option></field><field name="button_text" type="text" label="MOD_CE_SEARCH_FIELD_BUTTONTEXT_LABEL" description="MOD_CE_SEARCH_FIELD_BUTTONTEXT_DESC">
				</field><field name="css_code" type="textarea" label="CE_CF_TYPE_CSS" description="CE_CF_TYPE_CSS" default="#mod_ce_search_form .inputbox{width:95%}" rows="8" cols="70"/></fieldset><fieldset name="filtering" label="JGLOBAL_FILTER_FIELD_LABEL">
         
         
         

      <field name="filters" type="checkboxes" label="JSEARCH_FILTER_LABEL" description="MOD_CE_SEARCH_FIELD_FILTER_DESC">
          
          
          
          
          

        <option value="catids">JCATEGORY</option><option value="con_position">COM_CONTACTENHANCED_FIELD_INFORMATION_CON_POSITION_LABEL</option><option value="country">COM_CONTACTENHANCED_FIELD_PARAMS_COUNTRY_LABEL</option><option value="state">COM_CONTACTENHANCED_FIELD_PARAMS_STATE-COUNTY_LABEL</option><option value="suburb">COM_CONTACTENHANCED_FIELD_PARAMS_TOWN-SUBURB_LABEL</option></field><field name="filter_categories-Title" type="title" label="JCATEGORIES" description="MOD_CE_SEARCH_FIELD_FILTER_CATEGORY_DESC"/><field name="filter_categories" type="category" extension="com_contactenhanced" multiple="true" size="5" label="JCATEGORIES" description="MOD_CE_SEARCH_FIELD_FILTER_CATEGORY_DESC"/></fieldset><fieldset name="advanced">
        
        
        
        
        
        
      <field name="layout" type="modulelayout" label="JFIELD_ALT_LAYOUT_LABEL" description="JFIELD_ALT_MODULE_LAYOUT_DESC">
				</field><field name="moduleclass_sfx" type="text" label="COM_MODULES_FIELD_MODULECLASS_SFX_LABEL" description="COM_MODULES_FIELD_MODULECLASS_SFX_DESC">
				</field><field name="search_results_layout" type="list" default="" label="MOD_CE_SEARCH_SEARCH_RESULT_LAYOUT_LABEL" description="MOD_CE_SEARCH_SEARCH_RESULT_LAYOUT_DESC">
          
          
        <option value="">JDEFAULT</option><option value="categories">MOD_CE_SEARCH_SEARCH_RESULT_LAYOUT_OPT_CATEGORIES
					</option></field><field name="cache" type="list" default="1" label="COM_MODULES_FIELD_CACHING_LABEL" description="COM_MODULES_FIELD_CACHING_DESC">
          
          
        <option value="1">JGLOBAL_USE_GLOBAL</option><option value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option></field><field name="cache_time" type="text" default="900" label="COM_MODULES_FIELD_CACHE_TIME_LABEL" description="COM_MODULES_FIELD_CACHE_TIME_DESC">
				</field><field name="cachemode" type="hidden" default="static">
          
        <option value="static">
					</option></field></fieldset></fields>
  </config>
</extension>
